<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- ============== Box icons ================ -->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link href='https://cdn.boxicons.com/3.0.3/fonts/basic/boxicons.min.css' rel='stylesheet'>
</head>
<body>

<nav class="navbar">
  <a href="/">Home <i class="bx bx-home-alt"></i></a>
  <span class="admin-badge">Admin Dashboard</i></span>
  <form method="POST" action="/logout">
    <button class="logout-btn">
      <i class="fas fa-sign-out-alt"></i> Logout
    </button>
  </form>
</nav>

<div class="admin-container">

  <div class="stats">
    <div class="stat-card">
      <i class="fas fa-users"></i>
      <h3><%= usersCount %></h3>
      <p>Users</p>
    </div>

    <div class="stat-card">
      <i class="fas fa-face-laugh"></i>
      <h3><%= jokesCount %></h3>
      <p>Jokes</p>
    </div>
  </div>

  <h2>All Jokes</h2>

  <table class="admin-table">
    <thead>
      <tr>
        <th>Joke</th>
        <th>Category</th>
        <th>Likes</th>
        <th>Dislikes</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% jokes.forEach(j => { %>
        <tr>
          <td><%= j.joke %></td>
          <td><%= j.category || "None" %></td>

          <!-- Likes with tooltip -->
          <td>
            <% const likes = votesByJoke[j.id]?.likes || []; %>
            <% if (likes.length > 0) { %>
              <span class="tooltip"><%= likes.length %> like<%= likes.length > 1 ? 's' : '' %>
                <span class="tooltiptext"><%= likes.join("\n") %></span>
              </span>
            <% } else { %>
              0
            <% } %>
          </td>

          <!-- Dislikes with tooltip -->
          <td>
            <% const dislikes = votesByJoke[j.id]?.dislikes || []; %>
            <% if (dislikes.length > 0) { %>
              <span class="tooltip"><%= dislikes.length %> dislike<%= dislikes.length > 1 ? 's' : '' %>
                <span class="tooltiptext"><%= dislikes.join("\n") %></span>
              </span>
            <% } else { %>
              0
            <% } %>
          </td>

          <td>
            <form method="POST" action="/delete/<%= j.id %>">
              <button class="delete-btn">
                <i class="fas fa-trash-alt"></i>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>

</body>
</html>
